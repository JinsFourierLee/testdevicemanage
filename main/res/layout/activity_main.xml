<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/text_screentitle"
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:baselineAligned="false"
        android:text="Insert the Test Device ID"
        android:textSize="10pt"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_deviceID"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:text="Device ID"
            android:textSize="10pt"/>

        <EditText
            android:id="@+id/user_deviceID"
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:hint="2~3 digits"
            android:gravity="center"
            android:inputType="number" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="â€» please check the behind of the device (with two digits)" />

    <Button
        android:id="@+id/button_next"
        android:layout_marginTop="100dp"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="Next"
        android:gravity="center"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="409dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="1dp">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>